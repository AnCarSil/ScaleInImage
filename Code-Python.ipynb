    "#########################################################################################################################\n",
    "def TransparentBG(datas):\n",
    "    newData = []\n",
    "    for item in datas:\n",
    "        if item[0] == 0 and item[1] == 0 and item[2] == 0:\n",
    "            newData.append((255, 255, 255, 0))\n",
    "        else:\n",
    "            newData.append(item)\n",
    "    return newData\n",
    "#########################################################################################################################\n",
    "def CompletaString(st, tamanho, ponto):\n",
    "    while len(st) < tamanho: st = st + ponto\n",
    "    return st + \" \"\n",
    "#########################################################################################################################\n",
    "\n",
    "print(\"Functions loaded succesfully\")"
   ]
  },
